{
  "compilerOptions": {
    "lib": ["es2021", "esnext"],
    "outDir": "./dist",       
    "rootDir": "./src",       
    "target": "ES6",          
    "module": "CommonJS",     
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,  
    "strict": true,           
    "skipLibCheck": true      
  },
  "include": ["src/**/*"],      
  "exclude": ["node_modules", "dist"]  
}

